{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2023",
    "lib": ["ES2023"],
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@holdem/shared-types": ["../../packages/shared-types/src"],
      "@holdem/shared-types/*": ["../../packages/shared-types/src/*"],
      "@holdem/shared-utils": ["../../packages/shared-utils/src"],
      "@holdem/shared-utils/*": ["../../packages/shared-utils/src/*"],
      "@holdem/database": ["../../packages/database/src"],
      "@holdem/database/*": ["../../packages/database/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../../packages/shared-types" },
    { "path": "../../packages/shared-utils" },
    { "path": "../../packages/database" }
  ]
}
